# EditorConfig 配置文件
# 用于统一不同编辑器和IDE的代码风格
# 官网：https://editorconfig.org/

# 根配置文件，停止向上查找
root = true

# 所有文件通用配置
[*]
# 使用Unix风格的换行符
end_of_line = lf
# 文件末尾添加换行符
insert_final_newline = true
# 删除行尾空格
trim_trailing_whitespace = true
# 使用UTF-8编码
charset = utf-8

# JavaScript、TypeScript、JSON等文件
[*.{js,ts,tsx,jsx,json,jsonc}]
# 使用2个空格缩进
indent_style = space
indent_size = 2

# CSS、Less、SCSS文件
[*.{css,less,scss,sass}]
indent_style = space
indent_size = 2

# HTML、XML文件
[*.{html,xml}]
indent_style = space
indent_size = 2

# Markdown文件
[*.md]
# 保留行尾空格（用于换行）
trim_trailing_whitespace = false

# YAML文件
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# 配置文件
[*.{config,rc}]
indent_style = space
indent_size = 2
